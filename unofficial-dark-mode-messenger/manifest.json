{
  "manifest_version": 3,
  "name": "Charcoal - Messenger Dark Mode",
  "version": "1.0.0",
  "description": "Experience Messenger in dark mode with multiple themes",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://messenger.com/*", "*://*.messenger.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["*://messenger.com/*", "*://*.messenger.com/*"]
}

