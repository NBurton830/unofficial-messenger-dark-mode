{
  "manifest_version": 3,
  "name": "Charcoal - Messenger Dark Mode",
  "version": "1.0.0",
  "description": "Experience Messenger in dark mode with multiple themes",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://messenger.com/*", "*://*.messenger.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["*://messenger.com/*", "*://*.messenger.com/*"]
}

